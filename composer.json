{
  "name": "maykonn/github-actions-php-phpcs",
  "description": "Github Actions for PHP with PHP Code Sniffer",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs --standard=PSR2 -v ./",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 -w -v ./"
  },
  "license": "MIT"
}
